{
  "name": "fah-client",
  "version": "0.1.0",
  "description": "Connect to the remote interface of Folding@home in a programmatic manner",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./commands": "./lib/commands/index.js"
  },
  "types": "./types/index.d.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "standard --fix '(config|lib)/**/*.?(c|m)js'",
    "format": "prettier '*.{json,yml,yaml}'",
    "test": "ava --tap|tap-nyc",
    "instrument": "nyc npm test",
    "docs": "jsdoc -c ./config/jsdoc.config.json",
    "build": "tsc -p ./config/declarations.tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "author": "",
  "license": "MIT",
  "engine": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "ava": "^3.5.2",
    "husky": "^4.2.3",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.3",
    "jsdoc-plugin-typescript": "^2.0.5",
    "lint-staged": "^10.0.10",
    "nyc": "^15.0.0",
    "prettier": "^2.0.2",
    "snazzy": "^8.0.0",
    "standard": "^14.3.3",
    "tap-nyc": "^1.0.3",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "fah-pyon": "github:tamaracha/node-fah-pyon",
    "telnet-client": "^1.2.11"
  },
  "files": [
    "lib/**/!(*.spec).?(c|m)js",
    "types/**/*.d.ts"
  ],
  "nyc": {
    "reporter": [
      "html"
    ],
    "check-coverage": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -c ./config/lint-staged.config.js",
      "pre-push": "npm test"
    }
  }
}
