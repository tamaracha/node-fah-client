{
  "name": "fah-client",
  "version": "0.1.0",
  "description": "Connect to the remote interface of Folding@home in a programmatic manner",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/fah-client.js",
    "./commands": "./lib/commands/index.js"
  },
  "types": "./types/index.d.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint lib/**/*.js",
    "format": "prettier-standard lib/**/*.js",
    "test": "riteway lib/**/*.spec.cjs | tap-nyc",
    "instrument": "nyc npm test",
    "docs": "jsdoc -c jsdoc.config.json",
    "types": "tsc -p declarations.tsconfig.json",
    "build": "npm run docs && npm run typings"
  },
  "author": "",
  "license": "MIT",
  "engine": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.3",
    "jsdoc-plugin-typescript": "^2.0.5",
    "nyc": "^15.0.0",
    "prettier-standard": "^16.2.1",
    "react": "^16.13.0",
    "riteway": "^6.1.1",
    "tap-nyc": "^1.0.3",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "fah-pyon": "github:tamaracha/node-fah-pyon",
    "telnet-client": "^1.2.11"
  },
  "nyc": {
    "reporter": [
      "html"
    ],
    "check-coverage": true
  },
  "lint-staged": {
    "lib/**/*.js": [
      "prettier-standard",
      "eslint --fix --format stylish",
      "tsc --noEmit --checkJs --allowJs --strict --esModuleInterop"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
