{
  "name": "fah-client",
  "version": "0.6.1",
  "description": "Connect to the remote interface of Folding@home in a programmatic manner",
  "author": "Tamara Cook <10754072+tamaracha@users.noreply.github.com>",
  "license": "MIT",
  "repository": "github:tamaracha/node-fah-client",
  "main": "./dist/index.js",
  "type": "module",
  "exports": {
    "import": {
      ".": "./lib/index.js",
      "./commands": "./lib/commands/index.js",
      "./client": "./lib/client/index.js"
    },
    "require": {
      ".": "./dist/index.js",
      "./commands": "./dist/commands/index.js",
      "./client": "./dist/client/index.js"
    }
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "lint": "standard --fix '{config,integration,lib}/**/*.?(c|m)js' | snazzy",
    "format": "prettier '*.{json,yml,yaml}'",
    "pretest": "tsc -p ./config/tsconfig.tests.json",
    "test": "ava",
    "coverage": "c8 --check-coverage --lines 70 --all --src lib -x **/*.spec.js -r lcov npm test",
    "integration:esm": "node ./integration/esm/index.mjs",
    "integration:commonjs": "npm run build:commonjs && node ./integration/commonjs/index.cjs",
    "integration": "npm run integration:esm && npm run integration:commonjs",
    "docs": "jsdoc -c ./config/jsdoc.config.json",
    "prebuild:declarations": "shx rm -Rf ./types/",
    "build:declarations": "tsc -p config/tsconfig.declarations.json",
    "prebuild:commonjs": "shx rm -Rf dist/",
    "build:commonjs": "tsc -p ./config/tsconfig.node12.json",
    "postbuild:commonjs": "shx cp ./config/package.json ./dist/",
    "build": "npm run build:declarations & npm run build:commonjs",
    "release": "release-it -c config/release-it.json"
  },
  "engine": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "^2.2.2",
    "@types/node": "^14.14.16",
    "ava": "^3.14.0",
    "c8": "^7.3.5",
    "husky": "^4.3.6",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.6",
    "jsdoc-plugin-typescript": "^2.0.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "release-it": "^14.2.2",
    "shx": "^0.3.3",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "fah-pyon": "https://github.com/tamaracha/node-fah-pyon/releases/download/v1.4.3/fah-pyon-1.4.3.tgz",
    "tslib": "^2.0.3",
    "typed-emitter": "^1.3.1"
  },
  "files": [
    "lib/**/!(*.spec).?(c|m)js",
    "dist/**/*",
    "types/**/*.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -c ./config/lint-staged.config.js",
      "pre-push": "npm test"
    }
  }
}
