{
  "name": "fah-client",
  "version": "0.1.0",
  "description": "Connect to the remote interface of Folding@home in a programmatic manner",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./commands": "./lib/commands/index.js"
  },
  "types": "./types/index.d.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "prettier-standard --lint 'lib/**/*.js'",
    "format": "prettier-standard 'lib/**/*.js'",
    "test": "ava --tap|tap-nyc",
    "instrument": "nyc npm test",
    "docs": "jsdoc -c ./config/jsdoc.config.json",
    "types": "tsc -p ./config/declarations.tsconfig.json",
    "build": "npm run docs && npm run types"
  },
  "author": "",
  "license": "MIT",
  "engine": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "ava": "^3.5.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.3",
    "jsdoc-plugin-typescript": "^2.0.5",
    "nyc": "^15.0.0",
    "prettier-standard": "^16.2.1",
    "tap-nyc": "^1.0.3",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "fah-pyon": "github:tamaracha/node-fah-pyon",
    "telnet-client": "^1.2.11"
  },
  "nyc": {
    "reporter": [
      "html"
    ],
    "check-coverage": true
  },
  "lint-staged": {
    "lib/**/!(*.spec).js": [
      "prettier-standard --lint",
      "tsc --noEmit --allowJs --checkJs --allowSyntheticDefaultImports --moduleResolution node --target es2019 --lib es2019 --module esnext --strict"
    ],
    "lib/**/*.spec.js": [
      "prettier-standard --lint",
      "tsc --noEmit --allowJs --checkJs --allowSyntheticDefaultImports --moduleResolution node --target es2019 --lib es2019 --module esnext "
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
